                              x:Name="AvoidPrefix_TextBox"
                              Background="#00519A"
                              GotFocus="SelectAllText"
                              TextAlignment="Center"
                              VerticalContentAlignment="Center"
                              Margin="0,3"
                              FontSize="11"
                              Text="zHK"
                              Foreground="White"/>
