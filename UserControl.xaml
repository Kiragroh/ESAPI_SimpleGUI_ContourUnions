                                FontSize="11"
                                FontStyle="Italic"
                                VerticalAlignment="Center"
                                Margin="5,0"
                                Foreground="#00519A"/>
                                    </StackPanel>

                                    <!--Margin Options-->
                                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                                        <Label Content="Margin Options"
                             VerticalAlignment="Center"
                             FontSize="13"
