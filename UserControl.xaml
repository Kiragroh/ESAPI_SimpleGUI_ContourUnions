                                TextWrapping="Wrap"
                                FontSize="11"
                                FontStyle="Italic"
                                VerticalAlignment="Center"
                                Margin="5,0"
                                Foreground="#00519A"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal"
                              HorizontalAlignment="Center"
                              Width="315">
                                        <Label Content="Begin PTV-Count:"
                            Width="120"
                            FontSize="12"
                            Foreground="#00519A"/>
