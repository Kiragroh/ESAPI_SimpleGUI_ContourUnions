                        VerticalAlignment="Center"
                        VerticalContentAlignment="Bottom"
                        Margin="5,0"
                        x:Name="CreateAvoids_CB"
                        />
                            <CheckBox Content="Opti Structures"
                        VerticalAlignment="Center"
                                      IsChecked="false"
                        VerticalContentAlignment="Bottom"
                        Margin="5,0"
                        x:Name="CreateOptis_CB"
                        />

                          

                        </StackPanel>
                        <!-- row 1.5 -->
