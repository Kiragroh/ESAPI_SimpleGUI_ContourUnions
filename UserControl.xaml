                            SelectionMode="Multiple" 
                            Height="auto" 
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            BorderBrush="#00519A"/>

                                    <!--Label-->
                                    <StackPanel Orientation="Horizontal"
                                  HorizontalAlignment="Center"
                                                    >
                                        <Label Content="Extra Options"
