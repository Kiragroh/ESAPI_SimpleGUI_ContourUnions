                            <Label Content="Help me create..."
                     VerticalAlignment="Center"
                     Margin="5,0"/>
                            <CheckBox Content="GTV-Unions"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Bottom"
                        Margin="5,0"
                        x:Name="CreateGTVunions_CB"
                        />
                            <CheckBox Content="CTV-Unions"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Bottom"
                        Margin="5,0"
                        x:Name="CreateCTVUnions_CB"
                        />
                            <CheckBox Content="PTV-Unions"
                        VerticalAlignment="Center"
                        Margin="5,0"
                        VerticalContentAlignment="Bottom"
                        x:Name="CreatePTVunions_CB"
                        />


