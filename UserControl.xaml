                             FontSize="13"
                             Foreground="#00519A"/>
                                    </StackPanel>
                                    <!--Divider-->
                                    <Label Content="__________________________________________________________"
                              Margin="0,-20,0,0"
                                               Visibility="Visible"
                              HorizontalAlignment="Center"
                              VerticalContentAlignment="Top"
                              FontSize="13"
                              Foreground="#00519A"/>

