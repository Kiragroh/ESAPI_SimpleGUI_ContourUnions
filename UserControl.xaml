                            <StackPanel Orientation="Horizontal"
                          Background="White"
                          Margin="0,0,5,0"
                          x:Name="AvoidanceStructure_SP"
                          Visibility="Collapsed">
                                <StackPanel Width="350">
                                    <!--Which OARs-->
                                    <StackPanel>
                                        <Label x:Name="OarAvoid_Label"
                            Content="OAR-AvoidStructures To Create"
                            HorizontalAlignment="Center"
                            Foreground="#00519A"/>
