                                    </StackPanel>
                                    <Label Content="____________________________________________________________________________"
                            Margin="0,-20,0,0"
                            HorizontalAlignment="Center"
                            VerticalContentAlignment="Top"
                            FontSize="13"
                            Foreground="#00519A"/>
                                    <!--Grow Margin-->
                                    <StackPanel Orientation="Horizontal"
                              HorizontalAlignment="Center"
                              Width="315">
                                        <Label Content="OAR Margin [mm]:"
                            Width="120"
                            FontSize="12"
                            Foreground="#00519A"/>
                                        <TextBox Width="30"
                              x:Name="AvoidGrowMargin_TextBox"
                              Background="#00519A"
                              GotFocus="SelectAllText"
                              TextAlignment="Center"
                              Margin="0,3"
                              FontSize="11"
                              VerticalContentAlignment="Center"
                              Text="2"
                             Foreground="White"/>
                                        <TextBlock Text="(If blank, the defalut is 2mm)"
                                FontSize="11"
                                FontStyle="Italic"
