                          Visibility="Visible">
                                <StackPanel Width="370"
                                              
                            Margin="5,0"
                            Visibility="Visible">



                                    <Label x:Name="GTV_Label"
                        Content="GTV selection"
                        HorizontalAlignment="Center" 
                        Foreground="#00519A"/>
                                    <!--Divider-->
                                    <Label Content="__________________________________________________________"
                              Margin="0,-20,0,-10"
